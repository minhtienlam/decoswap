<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-1 title">
			<h1>Shopping Cart</h1>
		</div>
		<div class="col-xs-2 shopping-cart-continue-shopping">
			<%= link_to "Continue Shoping", items_path, class: "btn btn-default" %>
		</div>
	</div>




	<div class="row">
		<div class="col-xs-12 col-md-7 col-md-offset-1">
			<div class="container">
				<div class="row text-center title">
					<div class="col-xs-3"><h3>Product</h3></div>
					<div class="col-xs-3"><h3>Name</h3></div>
					<div class="col-xs-3"><h3>Price</h3></div>
					<div class="col-xs-3"><h3>Delete</h3></div>

				</div>
				<% @carts.each do |cart| %>
				<div class="row text-center shopping-cart-margin shopping-cart-padding shopping-cart-border">
					<div class="col-xs-3">
						<div class="shopping-cart-image shopping-cart-center flex-center">
							<%= cl_image_tag(cart.item.photos.first.path) %>
						</div>
					</div>
					<div class="col-xs-3">
						<div class="flex-center">
							<h4><%= cart.item.name %></h4>
						</div>
					</div>
					<div class="col-xs-3">
						<div class="flex-center"><h4><%= humanized_money(cart.item.price) %>€/month</h4></div>
					</div>
					<div class="col-xs-3">
						<div class="flex-center">
							<%= link_to new_cart_path(cart), method: :delete do %>
							<i class="fa fa-trash shopping-cart-icon-col" aria-hidden="true"></i>
							<% end %>
						</div>
					</div>
				</div>
				<% end %>
			</div>
		</div>
		<div class="col-xs-12 col-md-3">
      <% if @order %>
  			<div class="background">
  				<h3>Order Summary</h3>
  				<p>Free Shipping</p>

  				  <p>Total price: <%= @order.total_amount %>€/month</p>
  				  <%= link_to "Checkout", edit_order_path(@order), class:"btn btn-cart" %>

  				<%#= link_to "Empty Cart", cart_path , class: "btn btn-danger", method: :delete %>
  			</div>
      <% end %>
		</div>
	</div>
</div>





<div class="container">
	<div class="row conf-margin-title">
		<div class="col-xs-1 col-xs-offset-2 text-center">
			<i class="fa fa-check conf-title tick-green" aria-hidden="true">
				</i>
		</div>
		<div class="col-xs-6 conf-margin-left-small">
			<h1>Your order has been placed</h1>
		</div>
		<div class="col-xs-12 text-center conf-margin">
			<p>Thank you for using DecoSwap. An email confirmation is on its way to: <%= @order.user.email %></p>
		</div>
	</div>


	<div class="row conf-margin conf-margin-top">
		<div class="col-xs-12 col-md-5 col-md-offset-2">
			<h3 class="conf-margin-bott">View your profile</h3>
			<%= link_to "Profile", profile_path(current_user), class: "btn btn-cart conf-btn"%>
		</div>
		<div class="col-xs-12 col-md-3 text-center">
			<h3>Get in touch</h3>
			<div class="row">
				<div class="col-xs-1 col-xs-offset-2 conf-phone-margin-left"><i class="fa fa-phone" aria-hidden="true"></i></div>
				<div class="col-xs-6"><p>02/ 318 80 66</p></div>
			</div>
			<div class="row">
				<div class="col-xs-1"><i class="fa fa-envelope" aria-hidden="true"></i></div>
				<div class="col-xs-6"><p>customerservice@decoswap.com</p></div>
			</div>
		</div>
	</div>

	<div class="row conf-margin">
		<div class="col-xs-12">
			<div class="row">
				<div class="col-xs-12 col-md-6 col-md-offset-2 conf-border-bottom">
					<h2 class="conf-bold">Order Summary</h2>
				</div>
				<div class="col-xs-12 col-md-2 conf-border-bottom">
					<h2 class="conf-bold">Order #<%= @order.id %></h2>
				</div>
			</div>

			<div class="row conf-margin">
				<div class="col-xs-12 col-md-4 col-md-offset-2 conf-border-right">
					<h3 class="conf-margin-bott conf-margin-top">Shipping Address</h3>
					<p><%= @order.billing_first_name %> <%= @order.billing_last_name%></p>
					<p><%= @order.billing_line %></p>
					<p><%= @order.billing_zip %> <%= @order.billing_city %></p>
					<p><%= @order.billing_country %></p>
					<h6>Tracking Number: #12345782738191</h6>
				</div>

				<div class="col-xs-12 col-md-3 col-md-offset-2">
					<h3 class="conf-margin-bott conf-margin-top">Cost</h3>
					<div class="row">
						<div class="col-xs-6">
							<p>Subtotal</p>
						</div>
						<div class="col-xs-6">
							<p><%= @order.total_amount %>€</p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-6">
							<p>Shipping</p>
						</div>
						<div class="col-xs-6">
							<p>Free</p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-6">
							<p>Total</p>
						</div>
						<div class="col-xs-6">
							<p><%= @order.total_amount %>€</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="container-fluid text-center line-new-product">
	  <h2>Discover</h2>
	</div>

	<!-- -/////////////////end-of-Princing////////////////////////// -->

	<!-- /.container -->

	<div id="owl-product">
	  <% Item.last(10).each do |item| %>
	  <div class="item text-center">
	    <%= link_to item_path(item), class:"no-text-decoration" do %>
	    <%= render "items/card", item: item %>
	    <% end %>
	  </div>
	  <% end %>
	</div>
</div>
